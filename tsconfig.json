{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noStrictGenericChecks": true,
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    }
  },
  "include": ["./src/**/*", "./tests/**/*"]
}
